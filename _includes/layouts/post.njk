---
layout: layouts/base.njk
templateClass: tmpl-post

contentLayout: layout-dual
---

<div class="site-aside">
  <div class="card sticky-toc">
    <h3 class="card-title">Table of Contents</h3>
    {{ content | toc | safe }}
  </div>
</div>

<div class="site-content">
<article class="card">
  <h1 class="post-title">{{ title }}</h1>
  <p class="post-description">{{ description }}</p>
  
  <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
  {%- for tag in tags | filterTagList -%}
  {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
  <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
  {%- endfor %}
  


  {{ content | safe }}
</article>

{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<div class="card">
  <ul>
    {%- if nextPost %}<li><a href="{{ nextPost.url | url }}">-> {{ nextPost.data.title }}</a></li>{% endif %}
    {%- if previousPost %}<li><a href="{{ previousPost.url | url }}"><- {{ previousPost.data.title }}</a></li>{% endif %}
  </ul>
</div>
{%- endif %}
</div>
