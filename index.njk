<script>
  function rand_select(a) {
    return a[Math.floor(Math.random() * a.length)];
  }

  let h = new Date().getHours();
  let timed_greet = '';
  if (h < 6) {
    timed_greet = 'Some&shy;one\'s up early!';
  } else if (h < 12) {
    timed_greet = 'Morn&shy;in\'!';
  } else if (h < 18) {
    timed_greet = 'After&shy;noon!';
  } else if (h < 21) {
    timed_greet = 'Even&shy;in\'!';
  } else {
    timed_greet = 'Good even&shy;ing!';
  }

  let greetings = ['Ahoy!', 'Hey!', 'Hi!', 'Hello!', 'Howdy!', timed_greet];
