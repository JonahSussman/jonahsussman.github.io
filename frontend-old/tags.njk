---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---

<div class="site-content">
  <div class="card">
  
  <h1 class="card-title">Tagged “{{ tag }}”</h1>
  
  <p><i>See <a href="{{ '/tags/' | url }}">all tags</a>.</i></p>
  
  {% set postslist = collections[ tag ] %}
  {% include "postslist.njk" %}
  
  </div >
</div>
