---
permalink: /tags/
layout: layouts/base.njk
---

<div class="site-content">
  <div class="card"> 
    <h1 class="card-title">Tags</h1>
    <p>
      {% for tag in collections.tagList | filterTagList %}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      {% endfor %}
    </p>
  </div>
</div>
